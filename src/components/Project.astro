---
const { coverMobile, coverDesktop, nameOne, nameTwo } = Astro.props;
---

<article class="relative">
    <picture>
        <source srcset={coverMobile} media="(max-width: 1024px)"/>
        <img src={coverDesktop} alt={`${nameOne} ${nameTwo}`}>
    </picture>
    <div class="absolute text-slate-50 z-10 bottom-4 left-4">
        <h3 class=" text-xl uppercase font-extralight">
            {nameOne}
            <br>
            {nameTwo}
        </h3>
    </div>
</article>